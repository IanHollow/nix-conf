{
  "cSpell.words": [
    "deadnix",
    "Gerg",
    "numtide",
    "ryantm",
    "rycee",
    "sourcehut",
    "statix",
    "zhaofengli"
  ],
  "editor.rulers": [
    100
  ],
  // Nix IDE Settings
  "nix.serverSettings": {
    "nixd": {
      "nixpkgs": {
        // Use the flake's nixpkgs input for package completions
        "expr": "import (builtins.getFlake \"${workspaceFolder}\").inputs.nixpkgs { }"
      },
      "formatting": {
        "command": [
          "nixfmt",
          "--filename={file}",
          "--indent=2",
          "--width=100",
          "--strict",
        ]
      },
      "options": {
        // NixOS options (uncomment and set <name> when you have nixosConfigurations)
        // "nixos": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.<name>.options"
        // },
        // Darwin options (uncomment and set <name> when you have darwinConfigurations)
        // "nix-darwin": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}\").darwinConfigurations.<name>.options"
        // },
        // Home Manager options (uncomment and set <name> when you have homeConfigurations)
        // "home-manager": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}\").homeConfigurations.<name>.options"
        // },
        // flake-parts options (enable debug = true in your flake first)
        // See: https://flake.parts/debug
        // "flake-parts": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}\").debug.options"
        // },
        // "flake-parts-perSystem": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}\").currentSystem.options"
        // }
      },
      "diagnostic": {
        "suppress": []
      }
    }
  }
}
