{
  system.defaults = {
    dock = {
      # auto hide the dock
      autohide = true;

      # dock position
      orientation = "bottom";

      # show running apps
      static-only = false;

      # disable recent apps
      show-recents = false;

      # show hidden apps
      showhidden = false;

      # disable recent spaces
      mru-spaces = false;

      # Disable Hot Corners
      wvous-tl-corner = 1;
      wvous-tr-corner = 1;
      wvous-bl-corner = 1;
      wvous-br-corner = 1;
    };
  };
}
